<h1>New Task Form</h1>

<%= form_for [@project, @task] do |f| %>
  <%= f.label :task_name %>
  <%= f.text_field :task_name %>
  <br/>
  <%= f.label :description %>
  <%= f.text_field :description %>
  <br/>
  <%= f.label :phase %>
  <%= f.text_field :phase %>
  <br/>
<div class="actions">
  <%= f.submit %>
</div>
<% end %>
