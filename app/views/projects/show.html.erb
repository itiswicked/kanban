<div class='column-headers'>
  <div id='story-header' class='header'>
    <i class="material-icons">face</i>
    <p>Story</p>
  </div>
  <div id='test-header' class='header'>
    <i class="material-icons">edit</i>
    <p>Test</p>
  </div>
  <div id='build-header' class='header'>
    <i class="material-icons">build</i>
    <p>Build</p>
  </div>
  <div id='review-header' class='header'>
    <i class="material-icons">assignment</i>
    <p>Review</p>
  </div>
  <div id='refactor-header' class='header'>
    <i class="material-icons">cached</i>
    <p>Refactor</p>
  </div>
  <div id='done-header' class='header'>
    <i class="material-icons">done</i>
    <p>Done</p>
  </div>

</div>

<div class='board'>
  <div id='story' class='column'>
    <% @tasks_1.each do |task| %>
      <div class="mdl-card mdl-shadow--4dp">
        <div class="mdl-card__title">
          <p><%= task.task_name %></p>
        </div>
        <div class="mdl-card__supporting-text">
          <p><%= task.description %></p>
        </div>
        <div class="mdl-card__actions mdl-card--border">
          <a class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">
            Delete me, Bitch
          </a>
        </div>
      </div>
    <% end %>
  </div>
  <div id='test' class='column'>
